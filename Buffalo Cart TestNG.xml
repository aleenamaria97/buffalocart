<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Suite">
    <listeners>
        <listener class-name="com.buffalocart.listener.TestListener"/>
    </listeners>
    <test name="DEMO WEB SHOP">
        <parameter name="browser" value="Chrome"/>

    <classes>
    <class name="com.buffalocart.testscripts.LoginTest">
        <methods>
            <exclude name="verifyLoginPageTitle"/>
            <exclude name="verifyUserLoginWithValidUserCredentials"/>
            <exclude name="verifyTheErrorMessageDisplayedForUserLoginWithInValidUserCredentials"/>
            <exclude name="verifyWhetherTheUserIsAbleToClickOnRememberMeCheckbox"/>
        </methods>
    </class>
        <class name="com.buffalocart.testscripts.ResetTest">
            <methods>
                <exclude name="verifyErrorMessageDisplayedOnResetPasswordPageWithInvalidEmailId"/>
            </methods>
        </class>
        <class name="com.buffalocart.testscripts.HomeTest">
            <methods>
                <exclude name="verifyHomePageTitle"/>
                <exclude name="verifyDateDisplayedInHomePage"/>
            </methods>
        </class>
        <class name="com.buffalocart.testscripts.SignOutTest">
            <methods>
                <exclude name="verifyUserIsNavigatingToLoginPageByClickingOnSignOutButton"/>
            </methods>
        </class>
        <class name="com.buffalocart.testscripts.UserManagementTest">
            <methods>
                <exclude name="verifyUserManagementSubTabs"/>
            </methods>
        </class>
        <class name="com.buffalocart.testscripts.UserTest">
            <methods>
                <exclude name="verifyUserPageTitle"/>
                <exclude name="verifyUserSearchWithValidData"/>
                <exclude name="verifyMessageDisplayedByUserSearchWithInvalidData"/>
            </methods>
        </class>
       <class name="com.buffalocart.testscripts.AddUserTest">
           <methods>
               <exclude name="verifyTheErrorMessageDisplayedWithoutFillingMandatoryFieldsInAddUserForm"/>
               <exclude name="verifyUserLoginWithNewlyAddedUser"/>
               <exclude name="verifyAddedUsePageTitle"/>
               <exclude name="verifyUserCanAddUserDetails"/>
           </methods>
       </class>
        <class name="com.buffalocart.testscripts.UpdateUserTest">
            <methods>
                <exclude name="verifyEditUserPageTitle"/>
                <include name="verifyUserCanEditTheUserDetails"/>
            </methods>
        </class>
        <class name="com.buffalocart.testscripts.DeleteUserTest">
            <methods>
                <exclude name="verifyUserCanDeleteAUser"/>
            </methods>
        </class>
        <class name="com.buffalocart.testscripts.ViewUserTest">
            <methods>
                <exclude name="verifyUserTheDetailsDisplayedOnViewUserPage"/>
            </methods>
        </class>
        <class name="com.buffalocart.testscripts.RolesTest">
            <methods>
                <exclude name="verifyRolesPageTitle"/>
            </methods>
        </class>
        <class name="com.buffalocart.testscripts.AddRolesTest">
            <methods>
                <exclude name="verifyAddRolesPageTitle"/>
            </methods>
        </class>
    </classes>
    </test>
</suite>

